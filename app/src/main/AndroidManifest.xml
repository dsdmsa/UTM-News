<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="dsdmsa.utmnews">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:name="dsdmsa.utmnews.App"
        android:theme="@style/AppTheme">
        <activity android:name="dsdmsa.utmnews.activityes.SplashScreenActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="dsdmsa.utmnews.activityes.MainActivity"
            android:theme="@style/NoActionBar"/>
        <activity android:name=".activityes.CategoryNewsActivity"/>
        <activity android:name=".activityes.TagNewsActivity"/>

        <receiver
            android:name=".data.brodcast.ConnectionChangeReceiver"
            android:label="NetworkConnection">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />.
            </intent-filter>
        </receiver>
    </application>


</manifest>